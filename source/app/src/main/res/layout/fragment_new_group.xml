<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <app.mosn.zdepthshadowlayout.ZDepthShadowLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        shadow:z_depth="z_depth1"
        shadow:z_depth_padding="z_depth1"
        shadow:z_depth_shape="rect">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newGroupFingerprint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/groupNameText"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/newGroupEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/groupNameField"
                android:imeOptions="actionDone"
                android:paddingTop="8dp" />


        </LinearLayout>

    </app.mosn.zdepthshadowlayout.ZDepthShadowLayout>


    <app.mosn.zdepthshadowlayout.ZDepthShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        shadow:z_depth="z_depth1"
        shadow:z_depth_padding="z_depth1"
        shadow:z_depth_shape="rect">

        <Button
            android:id="@+id/newGroupButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="#2196F3"
            android:gravity="center"
            android:minWidth="88dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/createNewGroupNameButton"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </app.mosn.zdepthshadowlayout.ZDepthShadowLayout>

</LinearLayout>